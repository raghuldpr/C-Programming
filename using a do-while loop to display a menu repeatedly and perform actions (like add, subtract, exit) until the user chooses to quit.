#include <stdio.h>

int main() {
    int choice, a, b;

    do {
        printf("\n--- MENU ---\n");
        printf("1. Add\n");
        printf("2. Subtract\n");
        printf("3. Exit\n");
        printf("Enter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter two numbers: ");
                scanf("%d %d", &a, &b);
                printf("Sum = %d\n", a + b);
                break;

            case 2:
                printf("Enter two numbers: ");
                scanf("%d %d", &a, &b);
                printf("Difference = %d\n", a - b);
                break;

            case 3:
                printf("Exiting program\n");
                break;

            default:
                printf("Invalid choice\n");
        }

    } while (choice != 3);

    return 0;
}


